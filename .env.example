# ============================================
# Blatt Configuration File Template
# Collect literature like collecting leaves
# ============================================
# Usage Instructions:
# 1. Copy this file as .env: cp .env.example .env
# 2. Fill in your actual configuration values
# 3. .env file will not be committed to git (already in .gitignore)

# ============================================
# Claude API Configuration
# ============================================
# Get API key at https://console.anthropic.com
CLAUDE_API_KEY=your_claude_api_key_here

# ============================================
# API Request Configuration
# ============================================
# Maximum number of retries
MAX_RETRIES=3

# Request timeout time (seconds)
REQUEST_TIMEOUT=30

# API rate limit delay (seconds) - Semantic Scholar limit is 1 second
RATE_LIMIT_DELAY=1.0

# ============================================
# Paper Retrieval Configuration
# ============================================
# Number of papers returned by initial search
INITIAL_PAPER_COUNT=10

# Maximum number of citations expanded per paper
CITATION_EXPAND_LIMIT=20

# Citation network expansion depth (1=only 1 level, 2=2 levels)
MAX_CITATION_DEPTH=1

# Minimum citation count threshold (papers with citations below this value will be ignored)
MIN_CITATION_COUNT=5

# Time window (only retrieve papers from the last N years)
TIME_WINDOW_YEARS=10

# ============================================
# Database Configuration
# ============================================
# SQLite database file path
DATABASE_PATH=data/blatt.db

# ============================================
# Export Configuration
# ============================================
# Export file storage directory
EXPORT_DIR=exports

# Minimum Priority threshold (only export papers with Priority >= this value)
MIN_PRIORITY_THRESHOLD=3

# ============================================
# Flask Application Configuration
# ============================================
# Runtime environment: development or production
FLASK_ENV=development

# Whether to enable debug mode
FLASK_DEBUG=True

# Secret key (used for session encryption, please change in production)
SECRET_KEY=your_secret_key_change_in_production

# Server port
FLASK_PORT=5000

# Server host (0.0.0.0 means allow external access)
FLASK_HOST=0.0.0.0

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/blatt.log
